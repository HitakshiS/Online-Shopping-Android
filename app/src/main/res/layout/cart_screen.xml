<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDDDD"
    android:id="@+id/cartscreen">
    <include
        layout="@layout/header_custom"/>

    <ListView
        android:id="@+id/myCartListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Amount: 0"
        android:background="#B9F4A460"
        android:textAlignment="center"
        android:textSize="30sp"
        android:id="@+id/cart_total_amount"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proceed For Payment"
        android:background="#F4A460"
        android:textSize="16sp"
        android:id="@+id/payment_button"
        />
</LinearLayout>