<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#FFFFFF"
android:id="@+id/cartscreen">
<include
    layout="@layout/header_custom"/>

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/myCartListView"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="15" />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/total_amount_initial"
    android:background="#FFFFFF"
    android:textAlignment="center"
    android:textSize="30sp"
    android:textColor="#000000"
    android:id="@+id/cart_total_amount"/>
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/place_your_order_btn_str"
    android:background="#F4A460"
    android:textSize="16sp"
    android:textColor="#000000"
    android:id="@+id/payment_button"
    />
</LinearLayout>